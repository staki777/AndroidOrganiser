<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context="com.example.user.drugsorganiser.ViewModel.DrugsActivity.Organiser.MyDrugs.AddEditDrug.CustomDosageFragment">

    <TextView
        style="@style/SecondaryHeaderStyle"
        android:text="@string/terms"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/term_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       />
    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorAccent"
        android:text="@string/addANewTerm"
        android:id="@+id/btnAddNewTerm"/>



</LinearLayout>
